
@model IEnumerable<Artisanaux.Web.Models.ProductDto>

<div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Product List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="productCreate" class="btn btn-outline-primary">
                    <i class="fas fa-plus">Create Product</i>
                </a>
            </div>

        </div>
  
    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {<tr>
                <td>
               @item.ProductName          
             </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.Price
            </td>
            <td>
                    <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId" asp-route-productId="@item.ProductId">
                        <i class="fas fa-edite"></i>
                    </a>
            </td>
                <td>
                    <a asp-action="ProductEdit" class="btn btn-danger" asp-route-productId="@item.ProductId" asp-route-productId="@item.ProductId">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>